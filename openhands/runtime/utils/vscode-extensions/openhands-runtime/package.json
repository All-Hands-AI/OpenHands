{
  "name": "vscode-runtime",
  "displayName": "OpenHands VSCode Runtime",
  "description": "A headless VSCode extension for OpenHands runtime execution, focusing on file operations and command execution using native VSCode APIs.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "OpenHands VSCode Runtime",
      "properties": {
        "openhands.serverUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "URL of the OpenHands backend server."
        }
      }
    }
  },
  "scripts": {
    "build:extension": "tsc -p tsconfig.extension.json",
    "compile": "npm run build:extension",
    "dev": "tsc -p tsconfig.extension.json --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "package": "vsce package",
    "test:extension": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@openhands/types": "file:../../../../../packages/types",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "mocha": "^10.7.3",
    "typescript": "^5.8.3",
    "vsce": "^2.15.0"
  },
  "license": "MIT",
  "publisher": "OpenHands"
}
