# OpenHands Environment Configuration for Ollama
# Copy this file to .env and modify as needed

# Ollama Configuration
OLLAMA_BASE_URL=http://host.docker.internal:11434
LLM_MODEL=ollama/deepseek-coder-v2:latest
LLM_BASE_URL=http://host.docker.internal:11434

# OpenHands Configuration
OPENHANDS_CONFIG_FILE=/app/config.toml
RUNTIME=docker
DEBUG=true

# Workspace Configuration
WORKSPACE_BASE=./workspace

# Docker Configuration
SANDBOX_RUNTIME_CONTAINER_IMAGE=docker.all-hands.dev/all-hands-ai/runtime:0.49-nikolaik

# Disable external services
DISABLE_TELEMETRY=true

# Optional: If your Ollama is running on a different host/port
# OLLAMA_HOST=192.168.1.100
# OLLAMA_PORT=11434
