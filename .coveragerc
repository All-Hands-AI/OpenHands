# Coverage.py configuration for autonomous system

[run]
source = openhands/autonomous
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */virtualenv/*

branch = True
parallel = True

[report]
# Target: 100% coverage
precision = 2
show_missing = True
skip_covered = False
sort = Cover

# Coverage targets
fail_under = 70

exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run
    if 0:
    if __name__ == .__main__.:

    # Don't complain about abstract methods
    @(abc\.)?abstractmethod

    # Don't complain about TYPE_CHECKING blocks
    if TYPE_CHECKING:

    # Don't complain about incomplete implementations
    pass
    \.\.\.

[html]
directory = htmlcov

[xml]
output = coverage.xml
